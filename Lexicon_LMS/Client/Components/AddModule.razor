@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Lexicon_LMS.Shared.Domain

@attribute [Authorize(Roles ="Teacher")]

<h3>Add a New Module</h3>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ErrorMessage
    </div>
}

<EditForm Model="@newModule" OnValidSubmit="AddNewModule">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="Name">Name:</label>
        <InputText id="Name" @bind-Value="newModule.Name" class="form-control" />
        <ValidationMessage For="@(() => newModule.Name)" />
    </div>

    <div class="form-group">
        <label for="Description">Description:</label>
        <InputText id="Description" @bind-Value="newModule.Description" class="form-control" />
        <ValidationMessage For="@(() => newModule.Description)" />
    </div>

    <div class="form-group">
        <label for="StartDate">Start Date:</label>
        <InputDate id="StartDate" @bind-Value="newModule.StartDate" class="form-control" />
        <ValidationMessage For="@(() => newModule.StartDate)" />
    </div>

    <button type="submit" class="btn btn-primary">Add module</button>
</EditForm>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ErrorMessage
    </div>
}