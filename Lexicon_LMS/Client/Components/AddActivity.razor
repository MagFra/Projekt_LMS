@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Lexicon_LMS.Shared.Domain

@attribute [Authorize]

<h3>Add a New Activity</h3>

<EditForm Model="@newActivity" OnValidSubmit="AddNewActivity">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="Name">Name:</label>
        <InputText id="Name" @bind-Value="newActivity.Name" class="form-control" />
        <ValidationMessage For="@(() =>newActivity.Name)" />
    </div>

    <div class="form-group">
        <label for="Description">Description:</label>
        <InputText id="Description" @bind-Value="newActivity.Description" class="form-control" />
        <ValidationMessage For="@(() => newActivity.Description)" />
    </div>

    <div class="form-group">
        <label for="StartDate">Start Date:</label>
        <InputDate id="StartDate" @bind-Value="newActivity.StartDate" class="form-control" />
        <ValidationMessage For="@(() => newActivity.StartDate)" />
    </div>

    <div class="form-group">
        <label for="LengthDays">Length (Days):</label>
        <InputNumber id="LengthDays" @bind-Value="newActivity.LengthDays" class="form-control" />
        <ValidationMessage For="@(() => newActivity.LengthDays)" />
    </div>

    <button type="submit" class="btn btn-primary">Add Activity</button>
</EditForm>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ErrorMessage
    </div>
}