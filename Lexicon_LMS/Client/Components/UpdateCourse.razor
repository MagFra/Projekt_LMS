<h3>UpdateCourse</h3>

<EditForm Model="@course" OnInvalidSubmit="EditCourse">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="name">Name:</label>
        <InputText id="name" class="form-control" @bind-Value="course.Name" />
    </div>

    <div class="form-group">
        <label for="Description">Description:</label>
        <InputText id="Description" @bind-Value="course.Description" class="form-control" />
        <ValidationMessage For="@(() => course.Description)" />
    </div>

    <div class="form-group">
        <label for="StartDate">Start Date:</label>
        <InputDate id="StartDate" @bind-Value="course.StartDate" class="form-control" />
        <ValidationMessage For="@(() => course.StartDate)" />
    </div>

    <div class="form-group">
        <label for="LengthDays">Length (Days):</label>
        <InputNumber id="LengthDays" @bind-Value="course.LengthDays" class="form-control" />
        <ValidationMessage For="@(() => course.LengthDays)" />
    </div>

    <div class="form-group">
        <label for="LastApplicationDay">Last Application Day:</label>
        <InputDate id="LastApplicationDay" @bind-Value="course.LastApplicationDay" class="form-control" />
        <ValidationMessage For="@(() => course.LastApplicationDay)" />
    </div>

    <button type="submit" class="btn btn-primary">Edit Course</button>
</EditForm>
