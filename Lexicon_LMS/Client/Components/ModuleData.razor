<h3>Modules</h3>
@ExtraCaption
<table class="table">
    <thead>
        <tr>
            <th scope="col">Course Id</th>
            <th scope="col">Date</th>
            <th scope="col">Info</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var module in ModuleLst)
        {
            <tr>
                <td scope="row">@module.Id</td>
                <td scope="row">@module.StartDate</td>
                <td scope="row"><a href="@($"moduleinfo/{module.Id}")" class="btn btn-outline-primary">Info</a></td>
                <td scope="row"><a href="@($"moduleedit/{module.Id}")" class="btn btn-outline-primary">Edit</a></td>
                <td scope="row">
                    <AuthorizeView Roles="Teacher">
                        <Authorized>
                            <a href="@($"moduledelete/{module.Id}")" class="btn btn-outline-primary">Delete</a>
                        </Authorized>
                    </AuthorizeView>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@($"moduleadd")" class="btn btn-outline-primary">Add new Module</a>

<br />Return from API:
<br />
@responseData
