<h3>Courses</h3>
@ExtraCaption
<table class="table">
    <thead>
        <tr>
            <th scope="col">Course Id</th>
            <th scope="col">Date</th>
            <th scope="col">Info</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in CourseLst)
        {
            <tr>
                <td scope="row">@course.Id</td>
                <td scope="row">@course.StartDate</td>
                <td scope="row"><a href="@($"courseinfo/{course.Id}")" class="btn btn-outline-primary">Info</a></td>
                <td scope="row"><a href="@($"courseedit/{course.Id}")" class="btn btn-outline-primary">Edit</a></td>
                <td scope="row">
                    <AuthorizeView Roles="Admin">
                        <Authorized>
                            <a href="@($"coursedelete/{course.Id}")" class="btn btn-outline-primary">Delete</a>
                        </Authorized>
                    </AuthorizeView>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@($"courseadd")" class="btn btn-outline-primary">Add new Course</a>

