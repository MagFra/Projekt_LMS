@page "/editmodule/{ModuleId:int}"

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Lexicon_LMS.Shared.Domain

<h3>Edit Module</h3>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ErrorMessage
    </div>
}

<EditForm Model="@Module" OnValidSubmit="UpdateModule">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="Name">Name:</label>
        <InputText id="Name" @bind-Value="Module.Name" class="form-control" />
        <ValidationMessage For="@(() => Module.Name)" />
    </div>

    <div class="form-group">
        <label for="Description">Description:</label>
        <InputText id="Description" @bind-Value="Module.Description" class="form-control" />
        <ValidationMessage For="@(() => Module.Description)" />
    </div>

    <div class="form-group">
        <label for="StartDate">Start Date:</label>
        <InputDate id="StartDate" @bind-Value="Module.StartDate" class="form-control" />
        <ValidationMessage For="@(() => Module.StartDate)" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</EditForm>
